<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>

<div class="bannerPage" >
    <%=link_to image_tag("NewHeader2.jpg", :size => "30000x10000"),"http://hermanosunidos.info/" %>
</div>


  <div class="center hero-unit">
    <h1>Welcome to the Sample App</h1>

    <h2>
      Welcome to HermanosUnidos.info, a resource for the student org Hermanos Unidos de UCSB. Please visit 
      <a href="http://huucsb.org/">HUUCSB.org</a>
