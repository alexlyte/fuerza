<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>

  </div>
<% else %>

<div class="bannerPage" >
    <%=link_to image_tag("NewHeader2.jpg", :size => "30000x10000"),"http://hermanosunidos.info/" %>
</div>


  <div class="center hero-unit">
    <h1>Welcome to HermanosUnidos.info</h1>

    <h2> This is a demo app for the student group Hermanos Unidos. Click the button below to create an account, and encourage your fellow Hermanos to join as well. With this app, you can create a profile, start events, and much more (coming). 
